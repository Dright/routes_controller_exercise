<h1>Create Product</h1>

<% product = Product.new(params[:product]) %>
<% if product.save %>
  <h2>Congrats You Create a New Product</h2>
  <p>Your product looks like <%= product.inspect %></p>
  <br />
<% else %>
  <h2>Your product was not saved!</h2>
  <p>
    <%= product.errors.full_messages %><br>
    Please go back in your browser and fix the problem
  </p>
  <br /><%= link_to "Back", "/products/new" %>
<% end %>

<%= link_to "Back to list", products_path %>
