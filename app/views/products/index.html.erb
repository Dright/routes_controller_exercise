<h1>Listing products</h1>

<% products = Product.includes(:user).all %>
<ul>
  <% products.each do |product| %>
    <li>
      Products Name: "<%= product.name %>" costs $<%= product.price %>
      Sold by <%= product.user.name if product.user %>
    </li>
  <% end %>
</ul>

<br />
<%= link_to "New Product", "/products/new" %>
